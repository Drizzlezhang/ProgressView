<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:paddingBottom="@dimen/activity_vertical_margin"
	tools:context="com.drizzle.sample.MainActivity"
	>

	<com.drizzle.progressview.ProgressView
		android:id="@+id/progressview"
		android:layout_width="wrap_content"
		app:progress_back_color="@color/colorPrimaryDark"
		app:progress_text_color="@color/colorPrimaryDark"
		app:progress_radius="100dp"
		app:progress_text_size="20sp"
		app:need_back_color="true"
		app:start_location="left"
		app:back_color="@color/colorAccent"
		android:layout_height="wrap_content"
		android:layout_centerInParent="true"
		/>

	<SeekBar
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/progressbar"
		/>

	<Button
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:id="@+id/button"
		/>
</RelativeLayout>
